# ================================
# HBRC CRM - Environment Variables
# ================================
# Copy this file to .env for local development
# For production, copy to .env.production and update values

# ================================
# Database Configuration
# ================================
DB_PASSWORD=password
# For local development (port 5433):
DATABASE_URL="postgresql://postgres:password@localhost:5433/HBRC"
# For Docker (use postgres service name):
# DATABASE_URL="postgresql://postgres:password@postgres:5432/HBRC?schema=public"

# ================================
# JWT Configuration
# ================================
# Generate secure secret: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# ================================
# URLs Configuration
# ================================
# For local development:
FRONTEND_URL="http://localhost:5173"
VITE_API_URL="http://localhost:3000"

# For production (replace with your server IP or domain):
# FRONTEND_URL="http://YOUR_SERVER_IP:5173"
# VITE_API_URL="http://YOUR_SERVER_IP:3000"

# ================================
# Email Configuration (Gmail SMTP)
# ================================
# For Gmail: Use App Password (not your regular password)
# Enable 2FA and generate app password: https://myaccount.google.com/apppasswords
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-password-here"
MAIL_FROM="HBRC <your-email@gmail.com>"

# ================================
# Optional: For other email providers
# ================================
# For Outlook/Hotmail:
# MAIL_HOST="smtp-mail.outlook.com"
# MAIL_PORT=587

# For Yahoo:
# MAIL_HOST="smtp.mail.yahoo.com"
# MAIL_PORT=465

# For custom SMTP:
# MAIL_HOST="smtp.yourdomain.com"
# MAIL_PORT=587

# ================================
# Paymob Payment Gateway
# ================================
# Get these from your Paymob Accept Dashboard: https://accept.paymob.com
# For test mode, use test credentials (keys starting with "egy_sk_test_")
PAYMOB_API_KEY="your-paymob-api-key"
PAYMOB_SECRET_KEY="egy_sk_test_xxxxx"
PAYMOB_PUBLIC_KEY="egy_pk_test_xxxxx"
PAYMOB_HMAC_SECRET="your-paymob-hmac-secret"

# Integration IDs (get from Paymob Dashboard > Payment Integrations)
PAYMOB_CARD_INTEGRATION_ID="your-card-integration-id"
PAYMOB_WALLET_INTEGRATION_ID="your-wallet-integration-id"
PAYMOB_KIOSK_INTEGRATION_ID="your-kiosk-integration-id"

# Callback URLs (IMPORTANT: Must be publicly accessible for webhooks!)
# For local testing with ngrok: ngrok http 3000
PAYMOB_RETURN_URL="http://localhost:5173/payment/result"
PAYMOB_WEBHOOK_URL="http://your-public-domain.com/paymob/webhook"

# For production:
# PAYMOB_RETURN_URL="http://YOUR_SERVER_IP:5173/payment/result"
# PAYMOB_WEBHOOK_URL="http://YOUR_SERVER_IP:3000/paymob/webhook"
