# ================================
# HBRC CRM - Environment Variables
# ================================
# Copy this file to .env and fill in your values

# ================================
# Database Configuration
# ================================
DB_PASSWORD=password
DATABASE_URL="postgresql://postgres:password@localhost:5433/HBRC"

# ================================
# JWT Configuration
# ================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# ================================
# Email Configuration (Gmail SMTP)
# ================================
# For Gmail: Use App Password (not your regular password)
# Enable 2FA and generate app password: https://myaccount.google.com/apppasswords
MAIL_HOST="smtp.gmail.com"
MAIL_PORT=587
MAIL_USER="your-email@gmail.com"
MAIL_PASSWORD="your-app-password-here"
MAIL_FROM="HBRC <your-email@gmail.com>"

# ================================
# Optional: For other email providers
# ================================
# For Outlook/Hotmail:
# MAIL_HOST="smtp-mail.outlook.com"
# MAIL_PORT=587

# For Yahoo:
# MAIL_HOST="smtp.mail.yahoo.com"
# MAIL_PORT=465

# For custom SMTP:
# MAIL_HOST="smtp.yourdomain.com"
# MAIL_PORT=587

